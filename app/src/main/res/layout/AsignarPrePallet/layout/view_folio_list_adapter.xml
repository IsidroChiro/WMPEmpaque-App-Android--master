<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Folio"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtFolio"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="100"
                android:text="516-89562"
                android:textColor="@color/black"
                android:textSize="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Número de cajas"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/et_numBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Número de cajas"
                    android:gravity="center"
                    android:editable="false"
                    android:inputType=""
                    android:selectAllOnFocus="true"
                    android:maxLength="16"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Inv."
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtInv"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="100"
                android:text="5G05"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Case Code"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>


            <TextView
                android:id="@+id/txtCodeCaseHeader"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="100"
                android:text="ZS634563G082"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Cajas:"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtNumCajas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="25dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/lblLbsPorCaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LBS"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/lblLbsDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LBS"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>