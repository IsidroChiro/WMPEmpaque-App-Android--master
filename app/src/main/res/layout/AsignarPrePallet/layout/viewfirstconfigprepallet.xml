<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#f4d101"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="33">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:text="Planta de Empaque"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>


                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/SPPlant"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="33">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:text="Linea"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/SPLine"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="33">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:text="SKU"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/SPSku"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#f4d101"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:text="Promotions"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/spPromo"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:text="TamaÃ±o"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/spSize"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#f4d101"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">

                <Button
                    android:id="@+id/btnCancelPP"
                    android:background="@drawable/btn_red"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:text="Cancelar"/>


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">

                <Button
                    android:id="@+id/btnCreatePP"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:text="Crear PrePallet"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
