<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/designfifo"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <TextView
                        android:id="@+id/tv_Folio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Folio"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#2978B5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cajas"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:id="@+id/tv_Boxes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cajas"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Peso"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:id="@+id/tv_Weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Peso"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Invernadero"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:id="@+id/tv_inv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Invernadero"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#707070"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calidad"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:id="@+id/tv_QA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calidad"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fecha Calidad"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:id="@+id/tv_QADate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fecha Calidad"
                                android:textSize="13dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Secciones"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_weight="0.5"/>


                            <TextView
                                android:id="@+id/tv_secciones"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="secciones"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_weight="0.5"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnErasePrefolio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.83"
                    android:gravity="center">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/cancel">

                    </ImageView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
