<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lytItemFolio"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/esquinas_redondas"
            android:layout_marginBottom="5dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Folio: "
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/vFormaA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytSeparador1"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#f4d101"
                android:orientation="vertical"/>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="80">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="90">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="30">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Planta que empaca: "
                                android:layout_marginRight="15dp"/>

                            <TextView
                                android:id="@+id/packPlant"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="San Isidro "/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="100">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="50">

                            <LinearLayout
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Linea: "
                                    android:layout_marginRight="15dp"/>

                                <TextView
                                    android:id="@+id/lineName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Z "/>

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="50">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="GreenHouse: "
                                android:layout_marginRight="15dp"/>

                            <TextView
                                android:id="@+id/gh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="X "/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="30">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="SKU: "
                                android:layout_marginRight="15dp"/>

                            <TextView
                                android:id="@+id/sku"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="7710"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="30">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Lbs disponibles: "
                                android:layout_marginRight="15dp"/>

                            <TextView
                                android:id="@+id/libras"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Lbs"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="30">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Cajas disponibles: "
                                android:layout_marginRight="15dp"/>

                            <TextView
                                android:id="@+id/BoxInLine"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="2 "/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_height="70dp"
                    android:layout_width="70dp"
                    android:layout_weight="20"
                    android:src="@drawable/iprint"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/lytSeparador2"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#f4d101"
                android:orientation="vertical"/>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="100">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Fecha de Empaque: "
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/dInLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="27-05-2016 04:37:01 "/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
