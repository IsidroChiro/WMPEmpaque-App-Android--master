<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prefolio"
                android:textSize="15dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/txt_PreFolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="asdas"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cajas"
                android:textSize="15dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_cajas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdas"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invernadero"
                android:textSize="15dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_Invernadero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdas"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:textSize="15dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_Peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdas"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calidad"
                android:textSize="15dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_QA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdas"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnErasePreFolio"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="16">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/cancel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#f4d101"/>


</LinearLayout>
